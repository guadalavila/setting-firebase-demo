{
    "name": "@guadalavila/setting-firebase",
    "version": "1.0.44",
    "description": "Libreria de configuraciones.",
    "main": "dist/index.js",
    "module": "dist/index.module.js",
    "scripts": {
        "build": "tsc",
        "cleanup": "rm -rf dist",
        "publish": "yarn cleanup && yarn build && npm publish",
        "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
        "format": "eslint src/**/*.ts --fix",
        "prettier": "npx prettier --write '*/**/*.ts'",
        "test": "yarn build && jest",
        "coverage": "jest --coverage"
    },
    "dependencies": {
        "firebase": "^8.9.1"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/jest": "^26.0.23",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.5"
    },
    "files": [
        "dist",
        "README.md",
        ".gitignore",
        "package.json",
        "yarn.lock"
    ],
    "keywords": [
        "utils",
        "firebase"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/guadalavila/setting-firebase-demo.git"
    },
    "homepage": "https://github.com/guadalavila/setting-firebase-demo",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "author": "guadalavila",
    "license": "ISC",
    "source": "src/index.ts",
    "types": "dist/index.d.ts"
}
